{
    "version": "2.0.0",
    "presentation": {
        "echo": true,
        "reveal": "always",
        "panel": "shared",
        "focus": true,
        "clear": true
    },
    "tasks": [
        {
            "label": "cmake build debug",
            "command": "cmake .. -DCMAKE_BUILD_TYPE=DEBUG && cmake --build . --target ${fileDirnameBasename}",
            "type": "shell",
            "group": "build",
            "problemMatcher": "$gcc",
            "options": {
                "cwd": "${workspaceRoot}/build"
            }
        },
        {
            "label": "cmake build debug asan+ubsan",
            "command": "cmake .. -DCMAKE_BUILD_TYPE=DEBUG -DWITH_SANS=True && cmake --build . --target ${fileDirnameBasename}",
            "type": "shell",
            "group": "build",
            "problemMatcher": "$gcc",
            "options": {
                "cwd": "${workspaceRoot}/build"
            }
        },
        {
            "label": "cmake build release",
            "command": "cmake .. -DCMAKE_BUILD_TYPE=RELEASE && cmake --build . --target ${fileDirnameBasename}",
            "type": "shell",
            "group": "build",
            "problemMatcher": "$gcc",
            "options": {
                "cwd": "${workspaceRoot}/build"
            }
        },
        {
            "label": "cmake build all debug",
            "command": "cmake .. -DCMAKE_BUILD_TYPE=DEBUG && cmake --build .",
            "type": "shell",
            "group": "build",
            "problemMatcher": "$gcc",
            "options": {
                "cwd": "${workspaceRoot}/build"
            }
        },
        {
            "label": "cmake build all release",
            "command": "cmake .. -DCMAKE_BUILD_TYPE=RELEASE && cmake --build .",
            "type": "shell",
            "group": "build",
            "problemMatcher": "$gcc",
            "options": {
                "cwd": "${workspaceRoot}/build"
            }
        },
        {
            "label": "run current (no build)",
            "command": "${workspaceFolder}/build/bin/${fileBasenameNoExtension}",
            "type": "shell",
            "options": {
                "cwd": "${workspaceRoot}"
            }
        },
        {
            "label": "run test cases",
            "command": "python ${workspaceFolder}/tools/tester/tester.py run-cases ${workspaceFolder}/build/bin/${fileDirnameBasename}",
            "type": "shell",
            "options": {
                "cwd": "${fileDirname}"
            },
            "problemMatcher": []
        }
    ]
}