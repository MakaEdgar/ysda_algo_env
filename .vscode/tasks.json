{
    "version": "2.0.0",
    "presentation": {
        "echo": true,
        "reveal": "always",
        "panel": "shared",
        "focus": true,
        "clear": true
    },
    "tasks": [
        {
            "label": "run current (no build)",
            "command": "${workspaceFolder}/build/bin/${fileBasenameNoExtension}",
            "type": "shell",
            "options": {
                "cwd": "${workspaceRoot}"
            }
        },
        {
            "label": "cmake build all debug",
            "command": "cmake .. -DCMAKE_BUILD_TYPE=DEBUG && cmake --build .",
            "type": "shell",
            "group": "build",
            "problemMatcher": "$gcc",
            "options": {
                "cwd": "${workspaceRoot}/build"
            }
        },
        {
            "label": "cmake build all debug sans",
            "command": "cmake .. -DCMAKE_BUILD_TYPE=DEBUG -DWITH_SANS=True && cmake --build .",
            "type": "shell",
            "group": "build",
            "problemMatcher": "$gcc",
            "options": {
                "cwd": "${workspaceRoot}/build"
            }
        },
        {
            "label": "cmake build all release",
            "command": "cmake .. -DCMAKE_BUILD_TYPE=RELEASE && cmake --build .",
            "type": "shell",
            "group": "build",
            "problemMatcher": "$gcc",
            "options": {
                "cwd": "${workspaceRoot}/build"
            }
        },
        {
            "label": "cmake build all release sans",
            "command": "cmake .. -DCMAKE_BUILD_TYPE=RELEASE -DWITH_SANS=True && cmake --build .",
            "type": "shell",
            "group": "build",
            "problemMatcher": "$gcc",
            "options": {
                "cwd": "${workspaceRoot}/build"
            }
        },
        {
            "label": "clang++-11 build current debug",
            "command": "/usr/bin/clang++-11",
            "args": [
                "--std=c++20",
                "-Wall",
                "-Wextra",
                "-Werror",
                "-Wextra-semi",
                "-Wvla-extension",
                "-O0",
                "-g",
                "-fsanitize=address",
                "-fsanitize=undefined",
                "-fno-omit-frame-pointer",
                "-g",
                "${fileDirname}/*.cpp",
                "-o",
                "${fileDirname}/out"
            ],
            "type": "shell",
            "group": "build",
            "problemMatcher": "$gcc",
            "options": {
                "cwd": "${workspaceRoot}"
            }
        }
    ]
}